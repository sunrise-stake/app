{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "mapRoot": "./dist",
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules", "dist"]
}
