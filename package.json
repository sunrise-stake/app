{
    "workspaces": [
        "packages/app",
        "packages/tests"
    ],
    "private": true,
    "scripts": {
        "program:lint": "cargo fmt --all -- --check && cargo clippy",
        "program:dylint": "cargo dylint --all --workspace",
        "lint": "eslint .",
        "test": "anchor test",
        "test:anchor": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 packages/tests/**/*.ts",
        "program:build": "anchor build",
        "program:deploy": "anchor deploy",
        "app:build": "sh -ac '. .env.${REACT_APP_ENV}; yarn workspace @sunrisestake/app build'"
    },
    "dependencies": {
        "@project-serum/anchor": "^0.26.0"
    },
    "devDependencies": {
        "@project-serum/anchor-cli": "^0.26.0",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.42.1",
        "chai": "^4.3.4",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.31.10",
        "mocha": "^10.2.0",
        "prettier": "^2.7.1",
        "ts-mocha": "^10.0.0",
        "typescript": "*"
    }
}
